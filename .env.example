# =================================
# CONFIGURAÇÕES GERAIS DO AMBIENTE
# =================================

# Ambiente de execução (dev, prod, test)
ENVIRONMENT=dev

# Configurações do servidor
HOST=0.0.0.0
PORT=8000
DEBUG=true
RELOAD=true

# =================================
# CONFIGURAÇÕES DE SEGURANÇA
# =================================

# Chave secreta para JWT (MUDE EM PRODUÇÃO!)
SECRET_KEY=your-super-secret-key-change-this-in-production-32-chars-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# =================================

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=financeiro_db

# Configurações de conexão
MONGODB_MIN_CONNECTIONS=10
MONGODB_MAX_CONNECTIONS=100

# =================================
# CONFIGURAÇÕES DO REDIS
# =================================

# Redis para cache e sessões
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600

# =================================
# CONFIGURAÇÕES DE LOG
# =================================

# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# =================================

# MongoDB - Banco de dados principal
MONGODB_URL=mongodb://financeiro_app:financeiro123@localhost:27017/financeiro?authSource=financeiro
MONGODB_DATABASE=financeiro
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_POOL_SIZE=50

# MongoDB Admin (para operações administrativas)
MONGODB_ADMIN_URL=mongodb://admin:admin123@localhost:27017/?authSource=admin

# =================================
# CONFIGURAÇÕES DE CACHE
# =================================

# Redis - Cache e sessões
REDIS_URL=redis://:redis123@localhost:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_TIMEOUT=30

# Cache TTL (tempo de vida em segundos)
CACHE_TTL_SHORT=300      # 5 minutos
CACHE_TTL_MEDIUM=1800    # 30 minutos  
CACHE_TTL_LONG=3600      # 1 hora

# =================================
# CONFIGURAÇÕES DE CORS
# =================================

# URLs permitidas para CORS (separadas por vírgula)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# =================================
# CONFIGURAÇÕES DE EMAIL (FUTURO)
# =================================

# SMTP para recuperação de senha
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# =================================
# CONFIGURAÇÕES DE TESTE
# =================================

# MongoDB para testes (usar banco separado)
TEST_MONGODB_URL=mongodb://financeiro_app:financeiro123@localhost:27017/financeiro_test?authSource=financeiro
TEST_MONGODB_DATABASE=financeiro_test

# Redis para testes (usar banco separado)
TEST_REDIS_URL=redis://:redis123@localhost:6379/1
